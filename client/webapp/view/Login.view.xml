<mvc:View controllerName="sap.ui.demo.client.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form">
    <App class="app">
        <pages>
            <Page class="customPage" backgroundDesign="Transparent" title="{i18n>loginPageTitle}">
                <content>
                    <form:SimpleForm>
                        <form:content >
                            <Label text="Kullanıcı Adı" />
                            <Input id="username"  required="true"/>
                            <Label text="Şifre" />
                            <Input id="password" type="Password" required="true"/>
                            <Link text="Şifremi Unuttum" href="#"/>
                            <Button text="Giriş Yap" press="onLogin"/>
                            <HBox class="register" justifyContent="Center">
                                <Text text="Hesabınız yoksa "/>
                                <Link text="Kayıt Olun" href="#"/>
                            </HBox>
                        </form:content>
                    </form:SimpleForm>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>